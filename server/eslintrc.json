{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": ["plugin:@typescript-eslint/recommended"],
	"env": { "node": true },
	"rules": {
		"indent": "off",
		"@types-eslint/indent": "off",
		"object-curly-spacing": "always",
		"template-curly-spacing": ["error", "never"],
		"no-comma-dangle": true
	}
}
